{
  "manifest_version": 3,
  "name": "Menta Check",
  "description": "A Chrome extension that gives you a legitimacy rating for websites that host, or maliciously presume to host, NFT collections.",
  "version": "0.1",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/favicon_io/favicon-16x16.png",
      "32": "/favicon_io/favicon-32x32.png",
      "48": "/favicon_io/android-chrome-192x192.png",
      "128": "/favicon_io/android-chrome-192x192.png"
    }
  }
}

