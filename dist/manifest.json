{
    "manifest_version": 3,
    "name": "Check Menta",
    "description": "A Chrome extension that gives you a legitimacy rating for websites that host, or maliciously presume to host, NFT collections.",
    "version": "0.8",
    "host_permissions": [
        "*://*/*",
        "http://*/*",
        "https://*/*"
    ],
    "background": { "service_worker": "background.js" },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "img/favicon_io/favicon_128.png"
    },
    "icons": {
        "128": "img/favicon_io/favicon_128.png"
    }
}